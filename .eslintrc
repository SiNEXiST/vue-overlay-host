{
    "root": true,
    "env": {
        "node": true,
        "mocha": true
    },
    "plugins": ["vue", "prettier"],
    "extends": ["plugin:vue/essential", "eslint:recommended"],
    "rules": {
        "max-len": [
            "error",
            {
                "code": 120
            }
        ],
        "no-console": "off"
    },
    "parserOptions": {
        "parser": "babel-eslint"
    }
}
